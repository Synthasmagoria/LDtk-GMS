            <kind>1</kind>
            <string>///snap view to the section of the room that the player's in

var _player_object = ldtk_player_get();

if (instance_exists(_player_object))
{
    var currentLevel = ldtk_level_get_current();
    
    if (currentLevel == -1)
    {
        show_debug_message("LDtk log: Camera was not in an LDtk level");
        instance_destroy();
        exit;
    }
    
    var
    xFollow = _player_object.x,
    yFollow = _player_object.y,
    x1 = ldtk_level_get_world_x(currentLevel),
    y1 = ldtk_level_get_world_y(currentLevel);
    
    // Use the top left of the current room as the camera's grid origin
    xFollow = floor((xFollow - x1) / view_wview[0]) * view_wview[0] + x1;
    yFollow = floor((yFollow - y1) / view_hview[0]) * view_hview[0] + y1;
    
    if (!leaveRoom)
    {
        xFollow = clamp(xFollow ,x1 ,x1 + ldtk_level_get_width(currentLevel)); 
        yFollow = clamp(yFollow ,y1 ,y1 + ldtk_level_get_height(currentLevel) - 1);   
    }
    
    view_xview[0] = xFollow;
    view_yview[0] = yFollow;
}
</string>
